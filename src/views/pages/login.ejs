<!DOCTYPE html>
<html lang="es-ES">
<%- include('../partials/head.ejs', {ruta:'/css/loginAndRegister.css'}) %>

  <body>

    <%- include("../partials/header", {loggedIn, searchBar: false}) %>

      <main>
        <div class="firstSection">
        </div>
        <section class="Form">
          <div class="container">
            <div class="titulo">
              <h1>¡Hola!</h1>
            </div>
            <form action="/login" method="POST" class="inputs">
              <div class="inputsButton">
                <label>
                  <input class="input-form" id="email" type="email" name="email"  placeholder="Tu nombre de usuario" />
                </label>
                <% if(locals.errors && errors.email) { %>
                  <p class="error-msg">
                    <%=errors.email.msg %>
                  </p>
                <% } %>
                <label>
                  <input class="input-form" id="password" type="password" autocomplete="off" name="password"
                    placeholder="Tu contraseña" />
                  <% if(locals.errors && errors.password) { %>
                    <p class="error-msg">
                      <%= errors.password.msg %>
                    </p>
                  <% } %>
                </label>
                <button class="button-form" type="submit">Iniciar Sesión</button>
              </div>
            </form>
          </div>
          <article>
            <p>No tienes cuenta?
              <a href="/register">
                Registrate
              </a>
            </p>
          </article>
        </section>
        <div class="secondSectionLogin">
        </div>

      </main>
      <%- include("../partials/footer") %>

  </body>

</html>