<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs', {ruta: 'css/loginAndRegister.css' }) %>

    <body>
        <%- include("../partials/header", {searchBar: false}) %>
        <main>
            <div class="firstSection"></div>
            <section class="Form">
                <div class="container">
                    <div class="titulo">
                        <h1>¡Registrate!</h1>
                    </div>

                    <% if (locals.msg) {%>
                        <div class="info success">
                            <p><%= msg %></p>
                        </div>
                    <% } %>
                    <% if (locals.errors) { %>
                        <div class="info errors">
                            <p>Se encontraron los siguientes errores:</p>
                            <ul>
                                <% errors.forEach(error => { %>
                                    <li> * <%= error.msg %></li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>



                    <div id='divError' class="info errors2">
                            <p>Se encontraron los siguientes errores:</p>
                            <ul>
                            </ul>
                        </div>




                    <form action="/register" method="POST" class="inputsregister">
                        <div class="inputsButton">
                            <label>
                                <input class="input-form email" id="email" type="text" name="email"
                                    placeholder="Tu Email"  />
                            </label>
                            <label>
                                <input class="input-form" id="password" type="password" name="password" autocomplete="off"
                                       placeholder="Tu contraseña"  />
                                <p  id="message" style="display: none;">Tu contraseña es <span id="strenght"></span></p>
                            </label>
                            <label>
                                <input class="input-form" id="password2" type="password" name="passwordConfirmation" autocomplete="off"
                                    placeholder="Repite tu contraseña"  />
                            </label>
                            <button  disabled class="button-form boton" type="submit">Crear Cuenta</button>
                        </div>
                    </form>
                </div>
                <article class="cuenta">
                    <p>¿Ya tienes cuenta?
                        <a href="/login">
                            Inicia Sesion
                        </a>
                    </p>
                </article>
            </section>
            <div class="secondSection"></div>
        </main>
        <%- include("../partials/footer") %>
        <script src="/js/modeLR.js"></script>
    </body>

    <script src="/js/registro.js"></script>

</html>