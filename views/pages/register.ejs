<!DOCTYPE html>
<html lang="es-ES">

<%- include('../partials/head.ejs', {ruta: 'css/register.css'}) %>
<body>

    <%- include("../partials/header", {loggedIn, searchBar: false}) %>
<main>

    <div class="firstSectionRegister">
    </div>


    <section class="registerForm">
        <div class="container">
            <div class="tituloregister">
                <h1>¡Registrate!</h1>
            </div>
            <form action="/" method="GET" class="inputsregister">
                <div class="inputsButton">
                    <label>
                        <input class="input-form" id="email" type="email" name="email" placeholder="Tu Email" />
                    </label>
                    <label>
                        <input class="input-form"  type="password" name="password" autocomplete="off" placeholder="Tu nueva contraseña" />
                    </label>
                    <label>
                        <input class="input-form"  type="password" autocomplete="off"  placeholder="Repite tu contraseña" />
                    </label>
                    <button class="button-form" type="submit" name="">Crear Cuenta</button>
                </div>
            </form>
        </div>
        <article>
            <p>Ya tienes cuenta?
                <a href="/login">
                    Inicia Sesion
                </a>
            </p>
        </article>
    </section>
    
    <div class="secondSectionRegister">
    </div>

</main>

<%- include("../partials/footer") %>


</body>
