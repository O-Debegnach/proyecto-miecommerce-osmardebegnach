<article class="cart-product">
    <div class="cart-product-info-left">
        <img src=<%=imagen %>>
        <%= nombre %>
    </div>
    <div class="cart-product-info-right">
        <a href="#" class="cart-button">Quitar</a>
        <div class="number-input">
            <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" class="input-number-left">-</button>
            <input class="cart-product-number" type="number" value=<%= cantidad %> min="1">
            <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="input-number-right">+</button>
        </div>
        <p class="cart-bold"><%= puntos %></p>
    </div>
</article>